<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://dozer.sourceforge.net"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">
    <configuration>
        <stop-on-errors>true</stop-on-errors>
        <date-format>MM/dd/yyyy HH:mm</date-format>
        <wildcard>true</wildcard>
    </configuration>

    <!--
        Template <-> TemplateEntity
        exclude: null
    -->
    <mapping map-null="false">
        <class-a>ru.todoo.domain.dto.Template</class-a>
        <class-b>ru.todoo.domain.entity.TemplateEntity</class-b>
        <field>
            <a>parentId</a>
            <b>parent.id</b>
        </field>
        <field>
            <a>userId</a>
            <b>user.id</b>
        </field>
        <field>
            <a>categoryId</a>
            <b>category.id</b>
        </field>
    </mapping>

    <!--
        Template <-> TemplateEntity
        exclude: null and children
    -->
    <mapping map-null="false" map-id="templateWithoutChildren">
        <class-a>ru.todoo.domain.dto.Template</class-a>
        <class-b>ru.todoo.domain.entity.TemplateEntity</class-b>
        <field>
            <a>parentId</a>
            <b>parent.id</b>
        </field>
        <field>
            <a>userId</a>
            <b>user.id</b>
        </field>
        <field>
            <a>categoryId</a>
            <b>category.id</b>
        </field>
        <field-exclude>
            <a>children</a>
            <b>children</b>
        </field-exclude>
    </mapping>

    <!--
        TemplateEntity -> TemplateEntity
        exclude: null, parent, children, user
        (used for update)
    -->
    <mapping map-null="false">
        <class-a>ru.todoo.domain.entity.TemplateEntity</class-a>
        <class-b>ru.todoo.domain.entity.TemplateEntity</class-b>
        <field-exclude>
            <a>parent</a>
            <b>parent</b>
        </field-exclude>
        <field-exclude>
            <a>children</a>
            <b>children</b>
        </field-exclude>
        <field-exclude>
            <a>user</a>
            <b>user</b>
        </field-exclude>
    </mapping>

    <!--
        Task <-> TaskEntity
        exclude: null
    -->
    <mapping map-null="false">
        <class-a>ru.todoo.domain.dto.Task</class-a>
        <class-b>ru.todoo.domain.entity.TaskEntity</class-b>
        <field>
            <a>parentId</a>
            <b>parent.id</b>
        </field>
        <field>
            <a>userId</a>
            <b>user.id</b>
        </field>
    </mapping>

    <!--
        Task <-> TaskEntity
        exclude: null and children
    -->
    <mapping map-null="false" map-id="taskWithoutChildren">
        <class-a>ru.todoo.domain.dto.Task</class-a>
        <class-b>ru.todoo.domain.entity.TaskEntity</class-b>
        <field>
            <a>parentId</a>
            <b>parent.id</b>
        </field>
        <field>
            <a>userId</a>
            <b>user.id</b>
        </field>
        <field-exclude>
            <a>children</a>
            <b>children</b>
        </field-exclude>
    </mapping>

    <!--
        TaskEntity -> TaskEntity
        exclude: null, parent, children, user
        (used for update)
    -->
    <mapping map-null="false">
        <class-a>ru.todoo.domain.entity.TaskEntity</class-a>
        <class-b>ru.todoo.domain.entity.TaskEntity</class-b>
        <field-exclude>
            <a>parent</a>
            <b>parent</b>
        </field-exclude>
        <field-exclude>
            <a>children</a>
            <b>children</b>
        </field-exclude>
        <field-exclude>
            <a>user</a>
            <b>user</b>
        </field-exclude>
    </mapping>

    <!--
        User <-> UserEntity
    -->
    <mapping>
        <class-a>ru.todoo.domain.entity.UserEntity</class-a>
        <class-b>ru.todoo.domain.dto.User</class-b>
        <field>
            <a>roles</a>
            <b>authorities</b>
        </field>
    </mapping>

    <!--
        SimpleGrantedAuthority -> String
        (used in User <-> UserEntity mapping)
    -->
    <mapping type="one-way">
        <class-a>org.springframework.security.core.authority.SimpleGrantedAuthority</class-a>
        <class-b>java.lang.String</class-b>
        <field>
            <a>role</a>
            <b>this</b>
        </field>
    </mapping>

</mappings>